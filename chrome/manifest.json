  "description" : "Help save your followers a click by tweeting directly the right information or image",
  "background" : { "scripts": ["background.js"], "persistent": false },
  "permissions" : [
    "webNavigation",
    "activeTab",
    "contextMenus",
    "http://*/",
    "https://*/"
   ],
  "minimum_chrome_version" : "6.0.0.0",
  "icons" : {
    "16" : "img/SavedYouAClick-16.png",
    "48" : "img/SavedYouAClick-48.png",
    "64" : "img/SavedYouAClick-64.png",
    "128" : "img/SavedYouAClick-128.png"
  },
  "manifest_version": 2
}
